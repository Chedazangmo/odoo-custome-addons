<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View for Competency Template -->
        <record id="view_competency_template_form" model="ir.ui.view">
            <field name="name">competency.template.form</field>
            <field name="model">competency.template</field>
            <field name="arch" type="xml">
                <form string="Competency Template">
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>

                        <group>
                            <group string="Template Details">
                                <field name="name" string="Template Name"/>
                                <field name="evaluation_group_id" string="Evaluation Group"/>
                            </group>
                            <group string="Points Settings">
                                <field name="total_points" string="Total Allowed Points" required="1"/>
                                <field name="computed_total" string="Current Total" readonly="1"/>
                            </group>
                        </group>

                        <!-- Competencies Section -->
                        <div class="oe_title">
                            <h2>Competencies</h2>
                            <p>Define competencies and their point allocations</p>
                        </div>

                        <field name="line_ids">
                            <list string="Competencies" editable="bottom">
                                <field name="competency_name" string="Competency Name" required="1"/>
                                <field name="competency_definition" string="Definition" widget="textarea" required="1"/>
                                <field name="points" string="Points" required="1"/>
                            </list>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View for Competency Template -->
        <record id="view_competency_template_tree" model="ir.ui.view">
            <field name="name">competency.template.tree</field>
            <field name="model">competency.template</field>
            <field name="arch" type="xml">
                <list string="Competency Templates">
                    <field name="name"/>
                    <field name="evaluation_group_id"/>
                    <field name="total_points"/>
                    <field name="computed_total"/>
                </list>
            </field>
        </record>

        <!-- Action & Menu -->
        <record id="action_competency_template" model="ir.actions.act_window">
            <field name="name">Competency Templates</field>
            <field name="res_model">competency.template</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>