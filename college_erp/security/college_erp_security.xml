<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. Create the category (same as before) -->
    <record id="module_category_college_erp" model="ir.module.category">
        <field name="name">College ERP</field>  
        <field name="description">College ERP categories</field>
        <field name="sequence">100</field>
    </record>
    
    <!-- 2. Create PRIVILEGES (new in Odoo 19) that have categories -->
    <record id="privilege_college_student" model="res.groups.privilege">
        <field name="name">Student Privilege</field>
        <field name="category_id" ref="module_category_college_erp"/>
        <field name="description">Student access permissions</field>
        <field name="sequence">10</field>
    </record>
    
    <record id="privilege_college_teacher" model="res.groups.privilege">
        <field name="name">Teacher Privilege</field>
        <field name="category_id" ref="module_category_college_erp"/>
        <field name="description">Teacher access permissions</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- 3. Create GROUPS linked to privileges -->
    <record id="group_college_erp_student" model="res.groups">
        <field name="name">Student</field>
        <!-- Link to privilege (not category!) -->
        <field name="privilege_id" ref="privilege_college_student"/>
        <!-- Optional: Set as normal user -->
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>   
    </record>
    
    <record id="group_college_erp_teacher" model="res.groups">
        <field name="name">Teacher</field>
        <!-- Link to privilege -->
        <field name="privilege_id" ref="privilege_college_teacher"/>
        <!-- Teacher implies Student -->
        <field name="implied_ids" eval="[(4, ref('group_college_erp_student'))]"/>   
    </record>
</odoo>


