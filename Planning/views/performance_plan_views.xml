<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Performance Plan Form View -->
        <record id="view_performance_plan_form" model="ir.ui.view">
            <field name="name">performance.plan.form</field>
            <field name="model">performance.plan</field>
            <field name="arch" type="xml">
                <form string="Performance Plan">
                    <header>
                        <!-- Status-specific buttons -->
                        <button name="action_submit_for_approval"
                                type="object"
                                string="Submit for Approval"
                                class="oe_highlight"
                                icon="fa-paper-plane"
                                invisible="state != 'draft'"/>

                        <button name="action_approve"
                                type="object"
                                string="Approve"
                                class="btn-success"
                                icon="fa-check"
                                invisible="state != 'submitted'"/>

                        <button name="action_reject"
                                type="object"
                                string="Reject"
                                class="btn-danger"
                                icon="fa-times"
                                invisible="state != 'submitted'"/>

                        <button name="action_reset_to_draft"
                                type="object"
                                string="Reset to Draft"
                                class="btn-warning"
                                icon="fa-undo"
                                invisible="state not in ['rejected', 'submitted']"/>

                        <!-- Template loading buttons (visible in draft state) -->
                        <button name="action_load_kpi_template"
                                type="object"
                                string="Load KPI Template"
                                class="btn-info"
                                icon="fa-download"
                                invisible="state != 'draft'"/>

                        <button name="action_load_competency_template"
                                type="object"
                                string="Load Comp. Template"
                                class="btn-info"
                                icon="fa-download"
                                invisible="state != 'draft'"/>

                        <button name="action_load_templates"
                                type="object"
                                string="Load All Templates"
                                class="btn-primary"
                                icon="fa-download"
                                invisible="state != 'draft'"/>

                        <!-- Status Bar -->
                        <field name="state"
                               widget="statusbar"
                               statusbar_visible="draft,submitted,approved,rejected"
                               options="{'clickable': '1'}"/>
                    </header>

                    <sheet>
                        <!-- Warning Messages -->
                        <div class="alert alert-warning" role="alert" invisible="state != 'rejected'">
                            <strong>⚠️ Plan Rejected</strong><br/>
                            Please review manager comments and resubmit.
                        </div>

                        <div class="alert alert-info" role="alert" invisible="state != 'approved'">
                            <strong>✅ Plan Approved</strong><br/>
                            This plan has been approved and locked for editing.
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Plan Reference"/>
                            </h1>
                            <h2>
                                <field name="employee_id" widget="many2one_avatar_employee"/>
                            </h2>
                        </div>

                        <!-- Basic Information -->
                        <group string="Basic Information">
                            <group>
                                <field name="evaluation_planning_id" string="Evaluation Plan" readonly="1"/>
                                <field name="employee_id" required="1" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                                <field name="evaluation_group_id" string="Evaluation Group" readonly="1"/>
                            </group>
                            <group>
                                <field name="state" string="Status" widget="badge"/>
                                <field name="approval_date" string="Approval Date" readonly="1"/>
                            </group>
                        </group>

                        <!-- Templates Section (only editable in draft state) -->
                        <group string="Templates">
                            <group>
                                <field name="kpi_template_id" string="KPI Template"
                                       readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="competency_template_id" string="Competency Template"
                                       readonly="state != 'draft'"/>
                            </group>
                        </group>

                        <!-- Notebook for Details -->
                        <notebook>
                            <!-- KPI Targets Tab -->
                            <page string="KPI Targets">
                                <div class="alert alert-info" invisible="state != 'draft'">
                                    <strong>Instructions:</strong> Set your target descriptions for each KPI. The "Max Score" is the maximum possible score for this KPI.
                                </div>

                                <!-- KPI Summary -->
                                <group string="KPI Summary">
                                    <group>
                                        <field name="kpi_total_max" string="Total Max Score" readonly="1"/>
                                    </group>
                                </group>

                                <!-- KPI Lines -->
                                <field name="kpi_line_ids" string="KPI Targets">
                                    <list string="KPI Targets" editable="bottom" create="false" delete="false">
                                        <field name="sequence" widget="handle"/>
                                        <field name="kpi_name" readonly="1"/>
                                        <field name="definition" readonly="1" string="Description"/>
                                        <field name="max_score" readonly="1"/>
                                        <field name="employee_target" string="Your Target"
                                               required="plan_state == 'draft'"
                                               readonly="plan_state != 'draft'"/>
                                        <!-- Manager fields - hidden during planning -->
                                        <field name="manager_notes" invisible="1"/>
                                        <field name="achieved_score" invisible="1"/>
                                    </list>

                                    <form string="KPI Detail">
                                        <group>
                                            <group>
                                                <field name="kpi_name" readonly="1"/>
                                                <field name="definition" readonly="1" nolabel="1"/>
                                                <field name="max_score" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="employee_target" string="Employee Target"
                                                       required="plan_state == 'draft'"
                                                       readonly="plan_state != 'draft'"/>
                                            </group>
                                        </group>

                                        <!-- Manager Evaluation (only visible after approval) -->
                                        <group string="Manager Evaluation"
                                               invisible="plan_state != 'approved'">
                                            <field name="manager_notes"/>
                                            <field name="achieved_score"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <!-- Competency Targets Tab -->
                            <page string="Competency Targets">
                                <div class="alert alert-info" invisible="state != 'draft'">
                                    <strong>Instructions:</strong> Set your target descriptions for each competency. The "Max Points" is the maximum possible points for this competency.
                                </div>

                                <!-- Competency Summary -->
                                <group string="Competency Summary">
                                    <group>
                                        <field name="competency_total_max" string="Total Max Points" readonly="1"/>
                                    </group>
                                </group>

                                <!-- Competency Lines -->
                                <field name="competency_line_ids" string="Competency Targets">
                                    <list string="Competency Targets" editable="bottom" create="false" delete="false">
                                        <field name="sequence" widget="handle"/>
                                        <field name="competency_name" readonly="1"/>
                                        <field name="definition" readonly="1" string="Description"/>
                                        <field name="max_points" readonly="1"/>
                                        <field name="employee_target" string="Your Target"
                                               required="plan_state == 'draft'"
                                               readonly="plan_state != 'draft'"/>
                                        <!-- Manager fields - hidden during planning -->
                                        <field name="manager_notes" invisible="1"/>
                                        <field name="achieved_points" invisible="1"/>
                                    </list>

                                    <form string="Competency Detail">
                                        <group>
                                            <group>
                                                <field name="competency_name" readonly="1"/>
                                                <field name="definition" readonly="1" nolabel="1"/>
                                                <field name="max_points" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="employee_target" string="Employee Target"
                                                       required="plan_state == 'draft'"
                                                       readonly="plan_state != 'draft'"/>
                                            </group>
                                        </group>

                                        <!-- Manager Evaluation (only visible after approval) -->
                                        <group string="Manager Evaluation"
                                               invisible="plan_state != 'approved'">
                                            <field name="manager_notes"/>
                                            <field name="achieved_points"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <!-- Comments Tab -->
                            <page string="Comments">
                                <group>
                                    <group string="Employee Comments">
                                        <field name="employee_comments" widget="html" nolabel="1"
                                               readonly="state != 'draft'"/>
                                    </group>
                                    <group string="Manager Comments">
                                        <field name="manager_comments" widget="html" nolabel="1"
                                               readonly="state not in ['submitted', 'rejected']"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Chatter -->
                            <page string="Activities">
                                <div class="oe_chatter">
                                    <field name="message_follower_ids" widget="mail_followers"/>
                                    <field name="activity_ids" widget="mail_activity"/>
                                    <field name="message_ids" widget="mail_thread"/>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Performance Plan List View -->
        <record id="view_performance_plan_list" model="ir.ui.view">
            <field name="name">performance.plan.list</field>
            <field name="model">performance.plan</field>
            <field name="arch" type="xml">
                <list string="Performance Plans">
                    <field name="name" string="Reference"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="department_id" string="Department"/>
                    <field name="state" string="Status" widget="badge"
                           options="{'warning': 'draft', 'primary': 'submitted', 'success': 'approved', 'danger': 'rejected'}"/>
                    <field name="kpi_total_max" string="Total KPI Score"/>
                    <field name="competency_total_max" string="Total Comp. Points"/>
                    <field name="approval_date" string="Approval Date"/>
                </list>
            </field>
        </record>

        <!-- Performance Plan Search View -->
        <record id="view_performance_plan_search" model="ir.ui.view">
            <field name="name">performance.plan.search</field>
            <field name="model">performance.plan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <filter name="draft_plans" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="submitted_plans" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter name="approved_plans" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <filter name="rejected_plans" string="Rejected" domain="[('state', '=', 'rejected')]"/>
                    <filter name="my_plans" string="My Plans" domain="[('employee_id.user_id', '=', uid)]"/>
                    <filter name="team_plans" string="Team Plans" domain="[('employee_id.parent_id.user_id', '=', uid)]"/>
                </search>
            </field>
        </record>

        <!-- Performance Plan Action -->
        <record id="Planning.action_performance_plan" model="ir.actions.act_window">
            <field name="name">Performance Plans</field>
            <field name="res_model">performance.plan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Performance Plan
                </p>
                <p>
                    Performance plans allow employees to set targets for KPIs and competencies,
                    then track achievement throughout the evaluation period.
                </p>
            </field>
        </record>

    </data>
</odoo>