<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Performance Plan Form View -->
        <record id="view_performance_plan_form" model="ir.ui.view">
            <field name="name">performance.plan.form</field>
            <field name="model">performance.plan</field>
            <field name="arch" type="xml">
                <form string="Performance Plan">
                   <header>
    <!-- Submit button - always visible, security handled in Python -->
    <button name="action_submit_for_approval"
            type="object"
            string="Submit for Approval"
            class="oe_highlight"
            icon="fa-paper-plane"/>

    <!-- Approve button - always visible, security handled in Python -->
    <button name="action_approve"
            type="object"
            string="Approve"
            class="btn-success"
            icon="fa-check"/>

    <!-- Reject button - always visible, security handled in Python -->
    <button name="action_reject"
            type="object"
            string="Reject"
            class="btn-danger"
            icon="fa-times"/>

    <!-- Reset button - always visible, security handled in Python -->
    <button name="action_reset_to_draft"
            type="object"
            string="Reset to Draft"
            class="btn-warning"
            icon="fa-undo"/>

    <!-- Template loading buttons - always visible, security handled in Python -->
    <!--<button name="action_load_kpi_template"
            type="object"
            string="Load KPI Template"
            class="btn-info"
            icon="fa-download"/>

    <button name="action_load_competency_template"
            type="object"
            string="Load Comp. Template"
            class="btn-info"
            icon="fa-download"/>

    <button name="action_load_templates"
            type="object"
            string="Load All Templates"
            class="btn-primary"
            icon="fa-download"/>-->

    <!-- Status Bar - shows current state -->
    <field name="state"
           widget="statusbar"
           statusbar_visible="draft,submitted,approved,rejected"
           options="{'clickable': '1'}"/>
</header>

                    <sheet>
                        <!-- Warning Messages -->
                        <div class="alert alert-warning" role="alert" invisible="state != 'rejected'">
                            <strong>⚠️ Plan Rejected</strong><br/>
                            Please review manager comments and resubmit.
                        </div>

                        <div class="alert alert-info" role="alert" invisible="state != 'approved'">
                            <strong>✅ Plan Approved</strong><br/>
                            This plan has been approved and locked for editing.
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Plan Reference"/>
                            </h1>
                            <h2>
                                <!-- Show employee name differently based on user role -->
                                <field name="employee_id" widget="many2one_avatar_employee"
                                       invisible="not (is_current_user_employee or is_current_user_hr)"/>
                                <div class="o_form_label" invisible="is_current_user_employee or is_current_user_hr">
                                    Employee:
                                </div>
                                <field name="employee_id" invisible="is_current_user_employee or is_current_user_hr"
                                       readonly="1"/>
                            </h2>
                        </div>

                        <!-- Basic Information -->
                        <group string="Basic Information">
                            <group>
                                <!-- HR only: Evaluation Planning field -->
                                <field name="evaluation_planning_id" string="Evaluation Plan"
                                       readonly="not is_current_user_hr"
                                       invisible="not is_current_user_hr"/>

                                <!-- Employee: Their own name (readonly) -->
                                <!-- Manager/HR: Employee field (selectable) -->
                                <field name="employee_id" required="1"
                                       readonly="not is_current_user_hr"
                                       invisible="is_current_user_employee"/>

                                <field name="department_id" readonly="1"/>
                                <field name="first_manager_id" readonly="1"/>

                                <!-- HR only: Can edit evaluation group -->
                                <field name="evaluation_group_id" string="Evaluation Group"
                                       readonly="not is_current_user_hr"/>
                            </group>
                            <group>
                                <!-- Second manager (only visible if exists and to manager/HR) -->
                                <field name="second_manager_id"
                                       invisible="not has_second_manager or (not is_current_user_manager and not is_current_user_hr and not is_current_user_reviewer)"
                                       readonly="1"/>

                                <!-- Reviewer field -->
                                <field name="reviewer_id" readonly="1"/>

                                <!-- Status badge -->
                                <field name="state" string="Status" widget="badge"/>

                                <!-- Approval date (only visible after approval) -->
                                <field name="approval_date" string="Approval Date"
                                       readonly="1"
                                       invisible="state != 'approved'"/>
                            </group>
                        </group>

                        <!-- Templates Section -->
                        <group string="Templates" invisible="not (is_current_user_employee or is_current_user_hr)">
                            <group>
                                <!-- Employee can select template in draft, HR always -->
                                <field name="kpi_template_id" string="KPI Template"
                                       readonly="state != 'draft' and not is_current_user_hr"/>
                            </group>
                            <group>
                                <field name="competency_template_id" string="Competency Template"
                                       readonly="state != 'draft' and not is_current_user_hr"/>
                            </group>
                        </group>

                        <!-- Notebook for Details -->
                        <notebook>
                            <!-- KPI Targets Tab -->
                            <page string="KPI Targets">
                                <div class="alert alert-info" invisible="state != 'draft' or not is_current_user_employee">
                                    <strong>Instructions:</strong> Set your target descriptions for each KPI. The "Max Score" is the maximum possible score for this KPI.
                                </div>

                                <!-- KPI Summary -->
                                <group string="KPI Summary">
                                    <group>
                                        <field name="kpi_total_max" string="Total Max Score" readonly="1"/>
                                    </group>
                                </group>

                                <!-- KPI Lines -->
                                <field name="kpi_line_ids" string="KPI Targets">
                                    <list string="KPI Targets" editable="bottom" create="false" delete="false">
                                        <field name="sequence" widget="handle"/>
                                        <field name="kpi_name" readonly="1"/>
                                        <field name="definition" readonly="1" string="Description"/>
                                        <field name="max_score" readonly="1"/>
                                        <field name="evaluation_criteria" readonly="1"/>

                                        <!-- Employee can edit target in draft state -->
                                        <field name="employee_target" string="Your Target"/>

                                        <!-- Reviewer can add comments -->
                                        <field name="reviewer_comments"
                                               readonly="not parent.is_current_user_reviewer"
                                               invisible="not parent.is_current_user_reviewer"
                                               string="Reviewer Comments"/>
                                    </list>

                                    <form string="KPI Detail">
                                        <group>
                                            <group>
                                                <field name="kpi_name" readonly="1"/>
                                                <field name="definition" readonly="1" nolabel="1"/>
                                                <field name="max_score" readonly="1"/>
                                                <field name="evaluation_criteria" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="employee_target" string="Employee Target"/>
                                            </group>
                                        </group>

                                        <!-- Manager Evaluation (visible to manager/HR in submitted/approved state) -->
                                        <group string="Manager Evaluation"
                                               invisible="not (parent.is_current_user_manager or parent.is_current_user_hr) or parent.state not in ['submitted', 'approved']">
                                            <field name="manager_notes" string="Notes"/>
                                        </group>

                                        <!-- Reviewer Comments (visible to reviewer) -->
                                        <group string="Reviewer Feedback"
                                               invisible="not parent.is_current_user_reviewer">
                                            <field name="reviewer_comments" string="Comments"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <!-- Competency Targets Tab -->
                            <page string="Competency Targets">
                                <div class="alert alert-info" invisible="state != 'draft' or not is_current_user_employee">
                                    <strong>Instructions:</strong> Set your target descriptions for each competency. The "Max Points" is the maximum possible points for this competency.
                                </div>

                                <!-- Competency Summary -->
                                <group string="Competency Summary">
                                    <group>
                                        <field name="competency_total_max" string="Total Max Points" readonly="1"/>
                                    </group>
                                </group>

                                <!-- Competency Lines -->
                                <field name="competency_line_ids" string="Competency Targets">
                                    <list string="Competency Targets" editable="bottom" create="false" delete="false">
                                        <field name="sequence" widget="handle"/>
                                        <field name="competency_name" readonly="1"/>
                                        <field name="definition" readonly="1" string="Description"/>
                                        <field name="max_points" readonly="1"/>

                                        <!-- Employee can edit target in draft state -->
                                       <field name="employee_target" string="Your Target"/>

                                        <!-- Reviewer can add comments -->
                                        <field name="reviewer_comments"
                                               readonly="not parent.is_current_user_reviewer"
                                               invisible="not parent.is_current_user_reviewer"
                                               string="Reviewer Comments"/>
                                    </list>

                                    <form string="Competency Detail">
                                        <group>
                                            <group>
                                                <field name="competency_name" readonly="1"/>
                                                <field name="definition" readonly="1" nolabel="1"/>
                                                <field name="max_points" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="employee_target" string="Employee Target"/>
                                            </group>
                                        </group>

                                        <!-- Manager Evaluation (visible to manager/HR in submitted/approved state) -->
                                        <group string="Manager Evaluation"
                                               invisible="not (parent.is_current_user_manager or parent.is_current_user_hr) or parent.state not in ['submitted', 'approved']">
                                            <field name="manager_notes" string="Notes"/>
                                        </group>

                                        <!-- Reviewer Comments (visible to reviewer) -->
                                        <group string="Reviewer Feedback"
                                               invisible="not parent.is_current_user_reviewer">
                                            <field name="reviewer_comments" string="Comments"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <!-- Comments Tab -->
                            <page string="Comments">
                                <group>
                                    <!-- Employee Comments (editable by employee in draft state) -->
                                    <group string="Employee Comments">
                                        <field name="employee_comments" widget="html" nolabel="1"
                                               readonly="not is_current_user_employee or state != 'draft'"/>
                                    </group>

                                    <!-- Manager Comments (editable by manager/HR in submitted/rejected state) -->
                                    <group string="Manager Comments">
                                        <field name="manager_comments" widget="html" nolabel="1"
                                               readonly="not (is_current_user_manager or is_current_user_hr) or state not in ['submitted', 'rejected']"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Chatter -->
                            <page string="Activities">
                                <div class="oe_chatter">
                                    <field name="message_follower_ids" widget="mail_followers"/>
                                    <field name="activity_ids" widget="mail_activity"/>
                                    <field name="message_ids" widget="mail_thread"/>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Performance Plan List View -->
        <record id="view_performance_plan_list" model="ir.ui.view">
            <field name="name">performance.plan.list</field>
            <field name="model">performance.plan</field>
            <field name="arch" type="xml">
                <list string="Performance Plans">
                    <field name="name" string="Reference"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="department_id" string="Department"/>
                    <field name="state" string="Status" widget="badge"
                           options="{'warning': 'draft', 'primary': 'submitted', 'success': 'approved', 'danger': 'rejected'}"/>
                    <field name="kpi_total_max" string="Total KPI Score"/>
                    <field name="competency_total_max" string="Total Comp. Points"/>
                    <field name="approval_date" string="Approval Date"/>
                </list>
            </field>
        </record>

        <!-- Performance Plan Search View -->
        <record id="view_performance_plan_search" model="ir.ui.view">
            <field name="name">performance.plan.search</field>
            <field name="model">performance.plan</field>
            <field name="arch" type="xml">
                <search string="Performance Plan Search">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>

                    <!-- State filters -->
                    <filter name="draft_plans" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="submitted_plans" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter name="approved_plans" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <filter name="rejected_plans" string="Rejected" domain="[('state', '=', 'rejected')]"/>

                    <!-- Role-based filters -->
                    <!-- Employee: My Plans -->
                    <filter name="my_plans" string="My Plans"
                            domain="[('employee_id.user_id', '=', uid)]"
                            help="Plans assigned to me"/>

                    <!-- Manager: Team Plans -->
                    <filter name="team_plans" string="Team Plans"
                            domain="['|', ('employee_id.parent_id.user_id', '=', uid),
                                    ('first_manager_id.user_id', '=', uid)]"
                            help="Plans of employees I manage"/>

                    <!-- Reviewer: Plans to Review -->
                    <filter name="review_plans" string="To Review"
                            domain="[('reviewer_id.user_id', '=', uid)]"
                            help="Plans assigned to me for review"/>

                    <!-- Group by filters -->
                    <separator/>
                    <filter string="Group by Employee"
                            name="group_by_employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Group by Department"
                            name="group_by_department"
                            context="{'group_by': 'department_id'}"/>
                    <filter string="Group by Status"
                            name="group_by_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Group by Manager"
                            name="group_by_manager"
                            context="{'group_by': 'first_manager_id'}"/>
                </search>
            </field>
        </record>

        <!-- Performance Plan Action -->
        <record id="Planning.action_performance_plan" model="ir.actions.act_window">
            <field name="name">Performance Plans</field>
            <field name="res_model">performance.plan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Performance Plan
                </p>
                <p>
                    Performance plans allow employees to set targets for KPIs and competencies,
                    then track achievement throughout the evaluation period.
                </p>
            </field>
        </record>

    </data>
</odoo>