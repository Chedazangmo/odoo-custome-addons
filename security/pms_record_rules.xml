        </record>
        
        <!-- PMS APPRAISAL KPI RULES -->
        
        <!-- HR Manager: Can see all KPIs -->
        <record id="rule_pms_appraisal_kpi_hr_manager" model="ir.rule">
            <field name="name">PMS Appraisal KPI: HR Manager - All</field>
            <field name="model_id" ref="model_pms_appraisal_kpi"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pms_hr_manager'))]"/>
        </record>
        
        <!-- Supervisor: Can see subordinates' KPIs -->
        <record id="rule_pms_appraisal_kpi_supervisor" model="ir.rule">
