            <field name="domain_force">[
                '|',
                ('appraisal_id.supervisor_id.user_id', '=', user.id),
                ('appraisal_id.reviewer_id.user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_pms_supervisor'))]"/>
        </record>
        
        <!-- Employee: Can see only own KRAs -->
        <record id="rule_pms_appraisal_kra_employee" model="ir.rule">
            <field name="name">PMS Appraisal KRA: Employee - Own</field>
