        <record id="rule_pms_cycle_hr_manager" model="ir.rule">
            <field name="name">PMS Cycle: HR Manager - All</field>
            <field name="model_id" ref="model_pms_cycle"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pms_hr_manager'))]"/>
        </record>

        <record id="rule_pms_cycle_employee" model="ir.rule">
            <field name="name">PMS Cycle: Employee - Read All</field>
            <field name="model_id" ref="model_pms_cycle"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pms_employee'))]"/>
        </record>
        
    </data>
</odoo>