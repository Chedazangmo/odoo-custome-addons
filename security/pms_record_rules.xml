<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- PMS APPRAISAL RULES -->
        
        <!-- HR Manager: Can see all appraisals -->
        <record id="rule_pms_appraisal_hr_manager" model="ir.rule">
            <field name="name">PMS Appraisal: HR Manager - All</field>
            <field name="model_id" ref="model_pms_appraisal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pms_hr_manager'))]"/>
        </record>
        
        <!-- Supervisor: Can see only subordinates' appraisals -->
        <record id="rule_pms_appraisal_supervisor" model="ir.rule">
            <field name="name">PMS Appraisal: Supervisor - Subordinates</field>
            <field name="model_id" ref="model_pms_appraisal"/>
            <field name="domain_force">[
                '|',
                ('supervisor_id.user_id', '=', user.id),
                ('reviewer_id.user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_pms_supervisor'))]"/>
        </record>
        
        <!-- Employee: Can see only own appraisals -->
        <record id="rule_pms_appraisal_employee" model="ir.rule">
            <field name="name">PMS Appraisal: Employee - Own</field>
            <field name="model_id" ref="model_pms_appraisal"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_pms_employee'))]"/>
        </record>
        
        <!-- PMS APPRAISAL KRA RULES -->
        
        <!-- HR Manager: Can see all KRAs -->
